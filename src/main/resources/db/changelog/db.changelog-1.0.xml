<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet author="M.Ali.Rock" id="202005251856">

    <createTable tableName="table_customer">

      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>

      <column name="name" type="VARCHAR(150)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="surname" type="VARCHAR(150)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="address" type="VARCHAR(150)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="phone" type="VARCHAR(150)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="dateOfBirth" type="TIME">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

    </createTable>

    <createTable tableName="table_account">

      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>

      <column name="customer_id" type="BIGINT">
        <constraints nullable="false" primaryKey="false" unique="false"/>
      </column>

      <column name="account_type_id" type="BIGINT">
        <constraints nullable="false" primaryKey="false" unique="true"/>
      </column>

      <column name="account_number" type="VARCHAR(150)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="balance" type="CURRENCY">
        <constraints nullable="false" primaryKey="false" unique="false"/>
      </column>
    </createTable>

    <createTable tableName="table_account_type">

      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>

      <column name="type" type="VARCHAR(150)">
        <constraints nullable="false" primaryKey="false" unique="false"/>
      </column>
    </createTable>

    <createTable tableName="table_account_transactions">

      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>

      <column name="customer_id" type="BIGINT">
        <constraints nullable="false" primaryKey="false" unique="false"/>
      </column>

      <column name="operation" type="VARCHAR(150)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="amount" type="CURRENCY">
        <constraints nullable="false" primaryKey="false" unique="false"/>
      </column>

      <column name="operation_date" type="TIME">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>

      <column name="account_id" type="BIGINT">
        <constraints nullable="false" primaryKey="false" unique="false"/>
      </column>
    </createTable>

  </changeSet>
</databaseChangeLog>